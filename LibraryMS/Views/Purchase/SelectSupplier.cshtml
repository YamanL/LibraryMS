@model IEnumerable <DatabaseLayer.SupplierTable>
@{
    ViewBag.Title = "Finalize Purchasing";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
@using (Html.BeginForm("PurchaseConfirm", "Purchase", FormMethod.Post,null))
{
        <div class="card">
            <div class="card card-flat">
                @*<div class="card-footer">
                    <input type="submit" style ="float:right;" value ="Finalize Purchase" class="btn btn-success"/>
                </div>*@
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="dataTable">
                        <thead style="background-color:lightgray;">
                            <tr>
                                <th>
                                    Supplier
                                </th>
                                <th>
                                    Contact No
                                </th>
                                <th>
                                    Supplier Email
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <form method="post" action="AllPurchase">
                                    <td>
                                        <input type="hidden" name="SupplierID" value="@item.SupplierID">
                                        <input type="hidden" name="SupplierName" value="@item.SupplierName">
                                        @Html.DisplayFor(modelItem => item.SupplierName)
                                    </td>
                                    <td>
                                        <input type="hidden" name="ContactNo" value="@item.ContactNo">
                                        @Html.DisplayFor(modelItem => item.ContactNo)
                                    </td>
                                    <td>
                                        <input type="hidden" name="Email" value="@item.Email">
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>

                                    <td>
                                        <input type="checkbox" name="name@item.SupplierID" class="chb" />
                                    </td>
                                    <td>
                                        <input type="submit" style="float:left;" value="Finalize Purchase" class="btn btn-success" />
                                        @*@Html.ActionLink("Finalize", "AllPurchase", null, new { @class = "btn btn-success", style = "padding:5px;" })*@
                                    </td>
                               </form>

                                </tr>
                            }
                        </tbody>
                    </table>
                    
                </div>
            </div>
        </div>
      </div>
 }
<script type="text/javascript">
    $(document).ready(function () {


        $(".chb").change(function (event) {
            $(".chb").prop('checked', false);
            $(this).prop('checked', true);
        });
    });
</script>
